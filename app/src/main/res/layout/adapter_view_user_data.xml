<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <FrameLayout
        android:id="@+id/user_avatar_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/user_avatar_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
        <ProgressBar
            android:id="@+id/user_avatar_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_avatar_frameLayout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="fdkafjdklasdf"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/user_gold_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:singleLine="true"
            android:maxLines="1"
            android:text="1"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/gold"/>
        <TextView
            android:id="@+id/user_silver_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:singleLine="true"
            android:maxLines="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/silver"/>
        <TextView
            android:id="@+id/user_bronze_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:singleLine="true"
            android:maxLines="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/bronze"/>
    </LinearLayout>
</RelativeLayout>